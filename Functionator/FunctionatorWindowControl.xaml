<UserControl x:Class="Functionator.FunctionatorWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:analyzer="clr-namespace:Functionator.Analyzer"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             toolkit:Themes.UseVsTheme="True">
    <Grid>
        <StackPanel Orientation="Vertical">

            <TextBlock Text="Parents" FontWeight="Bold"/>
            
            <Separator />

            <StackPanel Orientation="Horizontal">
                <Button x:Name="ParentsGoToUsageButton" Content=">" Width="30" MinWidth="30" MaxWidth="30" Click="ParentsGoToUsageButton_OnClick"/>
                <Button x:Name="ParentsGoToDefinitionButton" Content=">>" Width="40" MinWidth="40" MaxWidth="40" Click="ParentsGoToDefinitionButton_OnClick" />
            </StackPanel>

            <TreeView Name="ParentsTreeView"
                      BorderThickness="0"
                      ItemsSource="{Binding Parents, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type analyzer:Function}" ItemsSource="{Binding Children}">
                        <TextBlock>
                            <Run Text="["/>
                            <Run Text="{Binding TriggerTypeString}" FontWeight="Bold"/>
                            <Run Text="] "/>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" (" FontStyle="Italic"/>
                            <Run Text="{Binding ChildrenCount, Mode=OneWay}" FontStyle="Italic"/>
                            <Run Text=" items)" FontStyle="Italic"/>
                        </TextBlock>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>

            <TextBlock Text="Children" FontWeight="Bold"/>

            <Separator />

            <StackPanel Orientation="Horizontal">
                <Button x:Name="ChildrenGoToUsageButton" Content=">" Width="30" MinWidth="30" MaxWidth="30" Click="ChildrenGoToUsageButton_OnClick"/>
                <Button x:Name="ChildrenGoToDefinitionButton" Content=">>" Width="40" MinWidth="40" MaxWidth="40" Click="ChildrenGoToDefinitionButton_OnClick"/>
            </StackPanel>

            <TreeView Name="ChildrenTreeView"
                      BorderThickness="0"
                      ItemsSource="{Binding Children, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type analyzer:Function}" ItemsSource="{Binding Children}">
                        <TextBlock>
                            <Run Text="["/>
                            <Run Text="{Binding TriggerTypeString}" FontWeight="Bold"/>
                            <Run Text="] "/>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" (" FontStyle="Italic" />
                            <Run Text="{Binding ChildrenCount, Mode=OneWay}" FontStyle="Italic"/>
                            <Run Text=" items)" FontStyle="Italic"/>
                        </TextBlock>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </StackPanel>
    </Grid>
</UserControl>