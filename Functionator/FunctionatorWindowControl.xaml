<UserControl x:Class="Functionator.FunctionatorWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:analyzer="clr-namespace:Functionator.Analyzer"
             xmlns:self="clr-namespace:Functionator"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="FunctionatorToolWindow">
    <Grid>
        <StackPanel Orientation="Horizontal">
            
            <TreeView Name="ParentsTreeView" ItemsSource="{Binding Parents, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type analyzer:Function}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="{Binding Caller}" />-->
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Children.Count}" Foreground="Blue" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate x:Key="FunctionItem" DataType="{x:Type analyzer:Function}">
                        <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="{Binding Caller}" />-->
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>

            <TreeView Name="ChildrenTreeView" ItemsSource="{Binding Children, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type analyzer:Function}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="{Binding Caller}" />-->
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Children.Count}" Foreground="Blue" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate x:Key="FunctionItem" DataType="{x:Type analyzer:Function}">
                        <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="{Binding Caller}" />-->
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </StackPanel>
    </Grid>
</UserControl>